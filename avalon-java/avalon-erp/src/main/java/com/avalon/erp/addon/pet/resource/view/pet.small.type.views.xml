<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_small_type_view_form" service="base.action.view">
        <field name="name">pet_small_type_view_form</field>
        <field name="label">宠物小类型</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.small.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="name"/>
                        </col>
                        <col>
                            <field name="img"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_small_type_view_tree" service="base.action.view">
        <field name="name">pet_small_type_view_tree</field>
        <field name="label">宠物小类型</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.small.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="img"/>
            </tree>
        </field>
    </record>
</avalon>
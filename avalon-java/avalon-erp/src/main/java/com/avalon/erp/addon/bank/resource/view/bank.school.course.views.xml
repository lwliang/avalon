<?xml version="1.0" encoding="UTF-8" ?>
<avalon>
    <record id="bank_school_course_view_form" service="base.action.view">
        <field name="name">bank_school_course_view_form</field>
        <field name="label">课程</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">bank.school.course</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="name"/>
                            <field name="collectInfo"/>
                        </col>
                        <col>
                            <field name="amount"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bank_school_course_view_tree" service="base.action.view">
        <field name="name">bank_school_course_view_tree</field>
        <field name="label">课程</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">bank.school.course</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="amount"/>
                <field name="collectInfo"/>
            </tree>
        </field>
    </record>
</avalon>
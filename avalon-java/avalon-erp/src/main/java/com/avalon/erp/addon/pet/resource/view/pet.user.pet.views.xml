<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_user_pet_view_form" service="base.action.view">
        <field name="name">pet_user_pet_view_form</field>
        <field name="label">宠物</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.user.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="name"/>
                            <field name="petCategoryId"/>
                            <field name="petSmallTypeId"/>
                        </col>
                        <col>
                            <field name="avatar"/>
                        </col>
                    </row>
                    <row>
                        <col>
                            <field name="sex"/>
                            <field name="birthday"/>
                            <field name="hairColor"/>
                        </col>
                        <col>
                            <field name="weight"/>
                            <field name="sterilization"/>
                            <field name="state"/>
                        </col>
                    </row>
                    <notebook>
                        <page label="驱虫">
                            <field name="dewormIds"/>
                        </page>
                        <page label="疫苗">
                            <field name="vaccinationIds"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_user_pet_view_tree" service="base.action.view">
        <field name="name">pet_user_pet_view_tree</field>
        <field name="label">宠物</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.user.pet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="petCategoryId"/>
                <field name="petSmallTypeId"/>
                <field name="sex"/>
                <field name="state"/>
                <field name="birthday"/>
                <field name="avatar"/>
                <field name="hairColor"/>
                <field name="sterilization"/>
            </tree>
        </field>
    </record>
</avalon>
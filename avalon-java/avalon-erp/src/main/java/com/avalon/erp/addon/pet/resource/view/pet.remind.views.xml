<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_remind_view_form" service="base.action.view">
        <field name="name">pet_remind_view_form</field>
        <field name="label">养宠提醒</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.remind</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="userId"/>
                            <field name="name"/>
                        </col>
                        <col>
                            <field name="petIds"/>
                        </col>
                    </row>
                    <row>
                        <col>
                            <field name="remindDate"/>
                            <field name="often"/>
                        </col>
                        <col>
                            <field name="remindTime"/>
                            <field name="done"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_remind_view_tree" service="base.action.view">
        <field name="name">pet_remind_view_tree</field>
        <field name="label">养宠提醒</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.remind</field>
        <field name="arch" type="xml">
            <tree>
                <field name="userId"/>
                <field name="petIds"/>
                <field name="name"/>
                <field name="remindDate"/>
                <field name="remindTime"/>
                <field name="often"/>
                <field name="done"/>
            </tree>
        </field>
    </record>

    <record id="pet_remind_window_action" service="base.action.window">
        <field name="name">pet_remind_window_action</field>
        <field name="label">养宠提醒</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.remind</field>
    </record>
</avalon>
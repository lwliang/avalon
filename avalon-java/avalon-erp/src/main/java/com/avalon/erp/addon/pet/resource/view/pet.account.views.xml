<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_account_view_form" service="base.action.view">
        <field name="name">pet_account_view_form</field>
        <field name="label">养宠记账</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.account</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="userId"/>
                            <field name="name"/>
                            <field name="remark"/>
                        </col>
                        <col>
                            <field name="petIds"/>
                            <field name="accountDate"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_account_view_tree" service="base.action.view">
        <field name="name">pet_account_view_tree</field>
        <field name="label">养宠记账</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="userId"/>
                <field name="petIds"/>
                <field name="name"/>
                <field name="accountDate"/>
                <field name="remark"/>
            </tree>
        </field>
    </record>

    <record id="pet_account_window_action" service="base.action.window">
        <field name="name">pet_account_window_action</field>
        <field name="label">养宠记账</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.account</field>
    </record>
</avalon>
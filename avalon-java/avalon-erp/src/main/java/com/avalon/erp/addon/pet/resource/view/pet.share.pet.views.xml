<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_share_pet_view_form" service="base.action.view">
        <field name="name">pet_share_pet_view_form</field>
        <field name="label">关联宠物</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.share.pet</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="petId"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_share_pet_view_tree" service="base.action.view">
        <field name="name">pet_share_pet_view_tree</field>
        <field name="label">关联宠物</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.share.pet</field>
        <field name="arch" type="xml">
            <tree>
                <field name="petId"/>
            </tree>
        </field>
    </record>
</avalon>
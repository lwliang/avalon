<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_address_view_form" service="base.action.view">
        <field name="name">pet_address_view_form</field>
        <field name="label">地址</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.address</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="province"/>
                            <field name="city"/>
                            <field name="district"/>
                            <field name="postCode"/>
                        </col>
                        <col>
                            <field name="address"/>
                            <field name="postCode"/>
                            <field name="isDefault"/>
                        </col>
                    </row>
                    <row>
                        <col>
                            <field name="phone"/>
                        </col>
                        <col>
                            <field name="receiverName"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_address_view_tree" service="base.action.view">
        <field name="name">pet_address_view_tree</field>
        <field name="label">地址</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.address</field>
        <field name="arch" type="xml">
            <tree>
                <field name="province"/>
                <field name="city"/>
                <field name="district"/>
                <field name="address"/>
                <field name="phone"/>
                <field name="phone"/>
                <field name="receiverName"/>
                <field name="postCode"/>
                <field name="isDefault"/>
            </tree>
        </field>
    </record>
</avalon>
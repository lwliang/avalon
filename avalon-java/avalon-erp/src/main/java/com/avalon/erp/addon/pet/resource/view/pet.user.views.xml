<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_user_view_form" service="base.action.view">
        <field name="name">pet_user_view_form</field>
        <field name="label">宠物主</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.user</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="name"/>
                            <field name="nickName"/>
                            <field name="birthday"/>
                        </col>
                        <col>
                            <field name="phone"/>
                            <field name="sex"/>
                            <field name="avatar"/>
                        </col>
                    </row>
                    <row>
                        <col>
                            <field name="password"/>
                            <field name="openId"/>
                        </col>
                        <col>
                            <field name="uid"/>
                            <field name="imId"/>
                        </col>
                    </row>
                    <notebook>
                        <page label="宠物">
                            <field name="pets"/>
                        </page>
                        <page label="地址">
                            <field name="address"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_user_view_tree" service="base.action.view">
        <field name="name">pet_user_view_tree</field>
        <field name="label">宠物主</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.user</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nickName"/>
                <field name="phone"/>
                <field name="sex"/>
                <field name="birthday"/>
                <field name="avatar"/>
                <field name="openId"/>
                <field name="uid"/>
                <field name="imId"/>
            </tree>
        </field>
    </record>

    <record id="pet_user_window_action" service="base.action.window">
        <field name="name">pet.user</field>
        <field name="label">宠物主</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.user</field>
    </record>
</avalon>
<?xml version="1.0" encoding="utf-8" ?>
<avalon>
    <record id="pet_adopt_image_view_form" service="base.action.view">
        <field name="name">pet_adopt_image_view_form</field>
        <field name="label">领养图片</field>
        <field name="viewMode">form</field>
        <field name="ref_serviceId">pet.adopt.image</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <row>
                        <col>
                            <field name="image"/>
                        </col>
                        <col>
                            <field name="sequence"/>
                        </col>
                    </row>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pet_adopt_image_view_tree" service="base.action.view">
        <field name="name">pet_adopt_image_view_tree</field>
        <field name="label">领养图片</field>
        <field name="viewMode">tree</field>
        <field name="ref_serviceId">pet.adopt.image</field>
        <field name="arch" type="xml">
            <tree>
                <field name="image"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>
</avalon>